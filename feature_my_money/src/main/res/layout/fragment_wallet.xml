<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f8fd"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="@drawable/ic_big_image"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ruppeGreyIcon"
                android:layout_width="29dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="-4dp"
                android:layout_toLeftOf="@id/totalEarning"
                android:src="@drawable/rupees_in_green" />

            <TextView
                android:id="@+id/totalEarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_bold"
                android:text="0"
                android:textColor="@color/button_back"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/totalEarningTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalEarning"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/raleway"
                android:text="Total Earnings"
                android:textColor="@color/job_id"
                android:textSize="22sp" />

            <View
                android:id="@+id/lineSeparator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/totalEarningTitle"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@color/text_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineSeparator"
                android:layout_marginTop="20dp">


                <RelativeLayout
                    android:id="@+id/redeemableLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/redeemableMoneyTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/raleway"
                        android:gravity="center_horizontal"
                        android:text="Redeemable Money"
                        android:textColor="@color/job_id"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/redeemableRupeeIcon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_below="@id/redeemableMoneyTitle"
                        android:layout_alignLeft="@id/redeemableMoneyTitle"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/rupees_in_grey" />

                    <TextView
                        android:id="@+id/redeemableMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/redeemableMoneyTitle"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/redeemableRupeeIcon"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textSize="24sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/availableMoneyTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/raleway"
                        android:gravity="center_horizontal"
                        android:text="Redeemed Money"
                        android:textColor="@color/job_id"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/availbleRupeeIcon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_below="@id/availableMoneyTitle"
                        android:layout_alignLeft="@id/availableMoneyTitle"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/rupees_in_grey" />

                    <TextView
                        android:id="@+id/availbleMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/availableMoneyTitle"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/availbleRupeeIcon"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textSize="24sp" />
                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="0.7"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/exclusiveOfferLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/exclusiveIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/exclusive_offers" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/exclusiveIcon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Exclusive Offers"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/text_color" />

                <RelativeLayout
                    android:id="@+id/referAndEarnLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/referIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                       android:layout_centerInParent="true"
                        android:src="@drawable/refer_and_earn" />

                    <TextView
                        android:id="@+id/referTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/referIcon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Refer &amp; Earn \n      â‚¹ 100"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tranctionHistoryBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/button_back"
            android:fontFamily="@font/raleway"
            android:text="Transaction History"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_transaction_history"
            app:iconGravity="textStart"
            app:iconSize="24dp" />
    </LinearLayout>

</layout>
