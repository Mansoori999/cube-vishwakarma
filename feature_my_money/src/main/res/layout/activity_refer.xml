<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/refer_backgroung_img"
        android:orientation="vertical"
        tools:context=".ui.ui.ReferActivity">


        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/earnTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/backBtn"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/raleway_bold"
            android:text="Earn â‚¹ 100"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/messageEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/earnTitle"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/raleway"
            android:text="Invite your friends to Truman Gig and get Rs.100 as they complete the first task."
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/inviteBtn"
            android:layout_width="160dp"
            android:layout_height="65dp"
            android:layout_below="@id/messageEt"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/white"
            android:text="Invite"
            android:textAllCaps="false"
            android:textColor="@color/button_back"
            android:textSize="18sp"
            app:cornerRadius="22dp" />

        <ImageView
            android:id="@+id/referImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/inviteBtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_refer_n_earn_image" />
    </RelativeLayout>
</layout>
