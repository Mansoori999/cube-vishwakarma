<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.18"
            android:src="@drawable/truman_logo" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/login_image" />

        <TextView
            android:id="@+id/loginNumberLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/login_lable"
            android:textColor="@color/intro_heading"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0.2"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/flagIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_indian_flag"/>

                    <TextView
                        android:id="@+id/mobilePref"
                        android:layout_width="45dp"
                        android:layout_height="60dp"
                        android:layout_toRightOf="@id/flagIcon"
                        android:gravity="center"
                        android:text="+91"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/editTextHolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/mobilePref">

                        <EditText
                            android:id="@+id/et1"
                            android:layout_width="20dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/login_mobile_edit_text_background"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et2"
                            android:layout_width="20dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/login_mobile_edit_text_background"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et3"
                            android:layout_width="20dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/login_mobile_edit_text_background"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et4"
                            android:layout_width="20dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/login_mobile_edit_text_background"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et5"
                            android:layout_width="20dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/login_mobile_edit_text_background"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/et6"
                            android:layout_width="20dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/login_mobile_edit_text_background"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et7"
                            android:layout_width="20dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/login_mobile_edit_text_background"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et8"
                            android:layout_width="20dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/login_mobile_edit_text_background"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et9"
                            android:layout_width="20dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/login_mobile_edit_text_background"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et10"
                            android:layout_width="20dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/login_mobile_edit_text_background"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/YoEt"
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/login_mobile_edit_text_background"
                            android:inputType="number"
                            android:maxLength="10" />
                    </LinearLayout>
                </RelativeLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/userNameInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/intro_skip"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/intro_small_text"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/userNameET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edit_text_background"
                        android:hint="@string/mobile_no"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/userPasswordInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/password"
                    android:textAlignment="center"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/intro_skip"
                    app:hintTextColor="@color/intro_skip"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/password"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/intro_skip" />

                </com.google.android.material.textfield.TextInputLayout>

                <EditText
                    android:id="@+id/userPasswordEt"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/mobilePref"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/password"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/intro_skip"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/loginBtn"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/button_back"
                        android:text="@string/contin"
                        android:textColor="#FFFFFF"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/loginOtpBtn"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:backgroundTint="@color/button_back"
                        android:text="@string/login_with_otp"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <TextView
                    android:id="@+id/forgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_toRightOf="@id/proceeding"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="Forgot Password"
                    android:textColor="@color/button_back"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/proceeding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="@string/by_proceeding_you_agree_to_the"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/proceeding"
                        android:gravity="center_horizontal"
                        android:text="User Agreement"
                        android:textColor="@color/button_back"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/and"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="and "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@id/and"
                        android:gravity="center"
                        android:text="@string/policy"
                        android:textColor="@color/button_back"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>