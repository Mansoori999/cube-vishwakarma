<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimaryDark"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Complaint Requests"
            app:navigationIcon="@drawable/ic_arrow_left"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="2dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="#2383E1">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="NEERAJ SHARMA"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/lato_bold"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:lineSpacingExtra="8sp"
                android:text="9205089886"
                android:textAlignment="viewStart"
                android:textColor="#FFF3F0F0"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:lineSpacingExtra="8sp"
                android:text="Android Trainer"
                android:textAlignment="viewStart"
                android:textColor="#F3F0F0"
                android:textSize="15sp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic2"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:src="@drawable/user"
                android:layout_gravity="right"
                android:layout_marginTop="40dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
</layout>