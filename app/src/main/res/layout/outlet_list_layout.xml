<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="2dp"
    app:layout_goneMarginTop="7dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/category_relayout1"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/layout_linear"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif"
                android:paddingLeft="3dp"
                android:layout_centerVertical="true"
                android:paddingRight="3dp"
                android:layout_centerHorizontal="true"
                android:lineSpacingMultiplier="1"
                android:text="name"
                android:textColor="#CC000000"
                android:textSize="14sp"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:id="@+id/gps"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:src="@drawable/ic_pin_location"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_linear"
            android:fontFamily="sans-serif"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="code"
            android:visibility="visible"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:textColor="#CC000000"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/regional_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/code"
            android:fontFamily="sans-serif"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="Regional Office"
            android:visibility="visible"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:textColor="#CC000000"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingLeft="3dp"
            android:layout_below="@+id/layout_linear"
            android:paddingRight="3dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:text="district"
            android:textColor="#CC000000"
            android:textStyle="normal"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/sales"
            android:layout_below="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:text="Sales Area"
            android:textColor="#CC000000"
            android:textStyle="normal"
            android:textSize="13sp" />


    </RelativeLayout>


</RelativeLayout>

