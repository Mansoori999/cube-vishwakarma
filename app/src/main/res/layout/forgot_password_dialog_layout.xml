<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
   android:padding="20dp"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/loading_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:paddingLeft="5dp"
        android:text="Enter Password"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <EditText
            android:id="@+id/text_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:layout_alignParentLeft="true"
            android:maxLines="1"
            android:background="@null"
            android:hint="4 Digit PIN"
            android:textSize="17sp" />
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:id="@+id/password_toggle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_visibile" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/dimension_20dp"
        android:textStyle="normal"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:text="Re-Enter Password"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <EditText
            android:id="@+id/re_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:layout_alignParentLeft="true"
            android:maxLines="1"
            android:background="@null"
            android:hint="4 Digit PIN"
            android:textSize="17sp" />
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:id="@+id/re_password_toggle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_visibile" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/reason"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/updatebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_toLeftOf="@+id/cancelbtn"
            android:textSize="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginLeft="@dimen/dimension_20dp"
            android:id="@+id/cancelbtn"
            android:layout_alignParentRight="true"
            android:textSize="16dp"/>

    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>