<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogFragmentTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MatchSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/intro_skip</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/white</item>
       <item name="fontFamily">@font/raleway_bold</item>
    </style>

    <style name="MatchSpinnerTheme" parent="AppTheme">
        <item name="android:dropDownListViewStyle">@style/MatchSpinnerStyle</item>
    </style>
    <style name="MatchMultipleSpinnerTheme" parent="AppTheme">
        <item name="multiChoiceItemLayout">@style/MatchSpinnerStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarWoBackButtonTheme" parent="@style/AppTheme">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:background">@color/dashboardDark</item>
        <item name="android:typeface">monospace</item>

        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- clicking icons to trigger a ripple effect -->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>


    </style>
    <style name="ToolbarTheme" parent="@style/ToolbarWoBackButtonTheme">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:background">#2383E1</item>
        <item name="navigationIcon">@drawable/ic_arrow_left</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- clicking icons to trigger a ripple effect -->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>

    </style>

    <style name="AppTheme.NavigationDrawerStyle" parent="AppTheme">
        <item name="colorNavigationItem">@color/menu_item_drawer</item>
        <item name="colorNavigationItemSelected">@color/white</item>
        <item name="drawableNavigationItemBackground">@drawable/item_bg</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@anim/animscale_in</item>
        <item name="android:windowExitAnimation">@anim/animscale_out</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>

</resources>
