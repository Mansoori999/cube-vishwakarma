<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MatchSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/intro_skip</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/white</item>
       <item name="fontFamily">@font/raleway_bold</item>
    </style>

    <style name="MatchSpinnerTheme" parent="AppTheme">
        <item name="android:dropDownListViewStyle">@style/MatchSpinnerStyle</item>
    </style>
    <style name="MatchMultipleSpinnerTheme" parent="AppTheme">
        <item name="multiChoiceItemLayout">@style/MatchSpinnerStyle</item>
    </style>

</resources>
