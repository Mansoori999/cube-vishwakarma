<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="3dp"
    app:cardElevation="6sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:id="@+id/plusMinusContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/showAnsIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:src="@drawable/plus_icon" />

            <ImageView
                android:id="@+id/hideAnsIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/minus"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:id="@+id/queEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/plusMinusContainer"
            android:fontFamily="@font/raleway"
            android:textColor="@color/que_ans_cplor"
            android:textSize="16sp"
            tools:text="Que" />

        <TextView
            android:id="@+id/ansEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/queEt"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/plusMinusContainer"
            android:fontFamily="@font/raleway"
            android:textColor="#808080"
            android:textSize="15sp"
            android:visibility="gone"
            tools:text="ans" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:background="@color/intro_skip"
            android:visibility="gone" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>

