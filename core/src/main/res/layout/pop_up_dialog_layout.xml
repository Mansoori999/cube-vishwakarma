<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    app:cardCornerRadius="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <ImageView
            android:id="@+id/popUpImage"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/popup_image"/>
        <TextView
            android:id="@+id/messageEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popUpImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/raleway"
            android:textColor="@color/black"
            tools:text="Do You Want to?"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/messageEt"
            android:layout_marginTop="10dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/noBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/save_for_job_box"
                android:fontFamily="@font/raleway_bold"
                android:text="No"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:cornerRadius="20dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/yesBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_back"
                android:fontFamily="@font/raleway_bold"
                android:text="Yes"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="20dp"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>