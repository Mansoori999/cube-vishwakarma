<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="12dp"
    android:background="@color/white"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/companyIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@drawable/ic_error" />

        <TextView
            android:id="@+id/company_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/dateOfOpening"
            android:layout_toEndOf="@id/companyIcon"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/clientHeading"
            android:textSize="15sp"
            tools:text="Job Id" />

        <TextView
            android:id="@+id/job_position_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/company_name_tv"
            android:layout_alignStart="@id/company_name_tv"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/raleway_bold"
            android:textColor="@color/jobSubHeading"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Job Description" />

        <TextView
            android:id="@+id/job_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_position_tv"
            android:layout_alignStart="@id/company_name_tv"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/raleway_bold"
            android:textColor="@color/cityText"
            android:textSize="14sp"
            tools:text="Gurgaon" />

        <TextView
            android:id="@+id/dateOfOpening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/salaryText"
            android:visibility="gone"
            tools:text="4 days ago" />

        <LinearLayout
            android:id="@+id/iconLayout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/job_place"
            android:layout_alignLeft="@id/company_name_tv"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/motorBike"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/motor_bike" />

            <ImageView
                android:id="@+id/certificate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/certificate" />

            <ImageView
                android:id="@+id/workFormHome"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/wfh" />
        </LinearLayout>


        <TextView
            android:id="@+id/amount_can_earn_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_place"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/iconLayout"
            android:gravity="end"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_bold"
            android:text="10,000 - 20,000 PM"
            android:textColor="@color/salaryText"
            android:textSize="14sp" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>


